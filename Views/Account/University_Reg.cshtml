@using CaptchaMvc.HtmlHelpers


@model MvcApplication3.Models.University_RegModel


@{
    ViewBag.Title = "University Registration";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1> 
                                     
    <h2>Step 2: Create a new account.</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.getId)
                @Html.TextBoxFor(m => m.getId)
            </li>
            <li>
                @Html.LabelFor(m => m.getName)
                @Html.TextBoxFor(m => m.getName)
            </li>

            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.mobCode)
                @Html.TextBoxFor(m => m.mobCode)
            </li>
            <li>
               @Html.MathCaptcha()
            </li>
        </ol>
        <input type="submit" value="Register" />
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}