@model MvcApplication3.Models.application_form
@{
    Layout = "~/Views/Shared/_LoginCandidate.cshtml";
}



<link rel="stylesheet" href="~/Content/datepicker.css">
<link rel="stylesheet" href="~/Content/chosen.css" />
<script src="~/Scripts/jquery-2.1.3.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<script src="~/Scripts/chosen.jquery.js"></script>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
   
    <legend>Application Form</legend>
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.fname)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.fname,(string)ViewBag.fnames, new { style = "width:120px" })
                    </td>

                    <td>
                        @Html.LabelFor(m => m.mname)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mname, new { style = "width:120px" })
                    </td>

                    <td>
                        @Html.LabelFor(m => m.lname)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.lname, new { style = "width:120px" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.fatname)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.fatname, new { style = "width:120px" })
                    </td>
                    <td>
                        @Html.LabelFor(m => m.Maaname)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Maaname, new { style = "width:120px" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.gender)
                    </td>
                    <td>
                        @Html.DropDownList("Gender", new List<SelectListItem>{
    new SelectListItem { Text = "Male", Value = "Male"},
    new SelectListItem { Text = "Female", Value = "Female"},
},"Select", new {id="gender" ,style = "width:130px; font-size:1.2em" })
                    </td>
                    <td>
                        @Html.LabelFor(m => m.calender)
                    </td>
                    <td>
                        <input type="text" placeholder="DOB" id="dob" style="width:120px">
                    </td>
                    <td>
                        @Html.LabelFor(m => m.religion)
                    </td>
                    <td>
                        @Html.DropDownList("Religion", new List<SelectListItem>{
    new SelectListItem { Text = "Hindu", Value = "Hindu"},
    new SelectListItem { Text = "Muslim", Value = "Muslim"},
    new SelectListItem { Text = "Christian", Value = "Christian"},
    new SelectListItem { Text = "Sikh", Value = "Sikh"},
    new SelectListItem { Text = "Buddhist", Value = "Buddhist"},
    new SelectListItem { Text = "Jain", Value = "Jain"},
    new SelectListItem { Text = "Parsi", Value = "Parsi"},
    new SelectListItem { Text = "Other", Value = "Other"},
}, "Select", new { id = "religion", data_placeholder = "Select", style = "width:130px; font-size:1.2em" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.category)
                    </td>
                    <td>
                        @Html.DropDownList("Category", new List<SelectListItem>{
    new SelectListItem { Text = "Open", Value = "Open"},
    new SelectListItem { Text = "OBC", Value = "OBC"},
    new SelectListItem { Text = "SC", Value = "SC"},
    new SelectListItem { Text = "ST", Value = "ST"},
    new SelectListItem { Text = "VJ", Value = "VJ"},
    new SelectListItem { Text = "Others", Value = "Others"},
    }, "Select", new { id = "category", style = "width:130px; font-size:1.2em" })
                    </td>
                    <td>
                        @Html.LabelFor(m => m.mt)
                    </td>
                    <td>
                        @Html.DropDownList("MT", new List<SelectListItem>{
    new SelectListItem { Text = "Assamee", Value = "Assamee"},
    new SelectListItem { Text = "Bengali", Value = "Bengali"},
    new SelectListItem { Text = "English", Value = "English"},
    new SelectListItem { Text = "Gujrati", Value = "Gujrati"},
    new SelectListItem { Text = "Hindi", Value = "Hindi"},
    new SelectListItem { Text = "Kannada", Value = "Kannada"},
    new SelectListItem { Text = "Malayalam", Value = "Malayalam"},
    new SelectListItem { Text = "Marathi", Value = "Marathi"},
    new SelectListItem { Text = "Oriya", Value = "Oriya"},
    new SelectListItem { Text = "Punjabi", Value = "Punjabi"},
    new SelectListItem { Text = "Sindhi", Value = "Sindhi"},
    new SelectListItem { Text = "Tamil", Value = "Tamil"},
    new SelectListItem { Text = "Telugu", Value = "Telegu"},
    new SelectListItem { Text = "Urdu", Value = "Urdu"},
    new SelectListItem { Text = "Other", Value = "Other"},
}, "Select", new { id = "mt", data_placeholder = "Select", style = "width:130px; font-size:1.2em" })
                    </td>
                    <td>
                        @Html.LabelFor(m => m.afi)
                    </td>
                    <td colspan="2">
                        @Html.DropDownList("Afi", new List<SelectListItem>{
    new SelectListItem { Text = "0 - 15,000", Value = "1"},
    new SelectListItem { Text = "15,001 - 50,000", Value = "2"},
    new SelectListItem { Text = "50,001 - 1,00,000", Value = "3"},
    new SelectListItem { Text = "1,00,001 - 1,50,000", Value = "4"},
    new SelectListItem { Text = "1,50,001 - 2,00,000", Value = "5"},
    new SelectListItem { Text = "2,00,001 - 2,50,000", Value = "6"},
    new SelectListItem { Text = "2,50,001 - 3,00,000", Value = "7"},
    new SelectListItem { Text = "3,00,001 - 3,50,000", Value = "8"},
    new SelectListItem { Text = "3,50,001 - 4,00,000", Value = "9"},
    new SelectListItem { Text = "4,00,001 - 4,50,000", Value = "10"},
    new SelectListItem { Text = "4,50,001 - 5,00,000", Value = "11"},
    new SelectListItem { Text = "5,00,001 - 5,50,000", Value = "12"},
    new SelectListItem { Text = "5,50,001 - 6,00,000", Value = "13"},
    new SelectListItem { Text = ">=6,00,001", Value = "14"},
}, "Select", new { id = "sal", data_placeholder = "Select", style = "width:130px; font-size:1.2em" })
                    </td>
                </tr>
            </table>
      
            <table>
                <tr>
                    <td colspan="2">
                        @Html.LabelFor(m => m.add1)
                    </td>
                    <td colspan="3">
                        @Html.TextBoxFor(m => m.add1, new { style = "width:650px" })
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.LabelFor(m => m.add2)
                    </td>
                    <td colspan="3">
                        @Html.TextBoxFor(m => m.add2, new { style = "width:650px" })
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.LabelFor(m => m.add3)
                    </td>
                    <td colspan="3">
                        @Html.TextBoxFor(m => m.add3, new { style = "width:650px" })
                    </td>
                </tr>
            </table>
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.state)
                    </td>
                    <td>
                        @Html.DropDownList("States",ViewBag.StateName as SelectList,"Select", new { @class = "state", id = "State", placeholder = "Select", style = "width:130px; font-size:1.2em" })
                    </td>
                    <td>
                       District                    
                    </td>
                    <td>
                        <select id="District" name="District" style="width:140px; font-size:1.2em"></select>
                    </td>
                    <td>
                       Taluka
                    </td>
                    <td>
                        <select  id="Taluka" name="Taluka" style="width:140px; font-size:1.2em"></select>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.pinCode)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.pinCode, new { style = "width:120px" })
                    </td>
                    <td>
                        @Html.LabelFor(m => m.mob)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mob, new { style = "width:120px" })
                    </td>
                    <td>
                        @Html.TextBox("status",(string)ViewBag.status, new { style = "width:120px" })
                    </td>
                </tr>
            </table>
           
                       <input type="button" value="SAVE" />
                       <input type="submit" value="Proceed To Submit Marksheet" />
                  
}


<script type="text/jscript">

    jQuery(document).ready(function ($) {
        $('#dob').datepicker({
            startDate: '01/01/1990',
            endDate: 'Today',
            format: 'dd/mm/yyyy'
     
        });
       
       $('#gender').chosen();
        $('#religion').chosen();
        $('#mt').chosen();
        $('#sal').chosen();
        $('.state').chosen();
        $('#category').chosen();
       
        $('#State').change(function () {
            $.getJSON('/ApplicationForm/DistrictList/' + $('#State').val(), function (data) {
                var items = '<option>Select a District</option>';
                $.each(data, function (i, district) {
                    items += "<option value='" + district.Value + "'>" + district.Text + "</option>";
                });
                $('#District').html(items).chosen();
            });
        });
        $('#District').change(function () {
            $.getJSON('/ApplicationForm/TalukaList/' + $('#District option:selected').text(), function (data) {
                var items = '<option>Select a Taluka</option>';
                $.each(data, function (i, taluka) {
                    items += "<option value='" + taluka.Value + "'>" + taluka.Text + "</option>";
                });
                $('#Taluka').html(items).chosen();
            });
        });
    });
</script>





